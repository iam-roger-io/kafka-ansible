[Unit]
Description=AMQ Streams Kafka connect 
Documentation=https://strimzi.io/docs/connect/latest/

[Service]
User={{ kafka_connect_user }}
Group={{ kafka_connect_user }}
Type=simple
ExecStart={{ kafka_connect_install_host_symlink }}/bin/connect-distributed.sh {{ kafka_connect_install_host_symlink }}/config/connect-distributed.properties
ExecStop=/bin/kill -TERM $MAINPID
[Install]
WantedBy=multi-user.target
